<launch>
  <arg name="laser"/>
  <arg name="tower"/>
  <arg name="tower_sensor"/>
  <arg name="base"/> 
  <arg name="use_sim"/> 

  <arg name="urdf_file" default="$(find xacro)/xacro '$(find elektron_description)/robots/$(arg base)_$(arg laser)_Tower-$(arg tower_sensor).urdf.xacro' use_sim:=$(arg use_sim)" if="$(arg tower)"/>
  <arg name="urdf_file" default="$(find xacro)/xacro '$(find elektron_description)/robots/$(arg base)_$(arg laser)_NoTower.urdf.xacro' use_sim:=$(arg use_sim)" unless="$(arg tower)"/>
  <param name="robot_description" command="$(arg urdf_file)" />
  
  <!-- Gazebo model spawner -->
  <node name="spawn_elektron_model" pkg="gazebo_ros" type="spawn_model"
        args="$(optenv ROBOT_INITIAL_POSE) -unpause -urdf -param robot_description -model $(arg base)"/>
    <!-- elektron control spawner -->

 <include file="$(find elektron_control)/launch/$(arg base)_Tower_control.launch.xml" if="$(arg tower)">
  <arg name="base" value="$(arg base)"/>
  </include>
 <include file="$(find elektron_control)/launch/$(arg base)_NoTower_control.launch.xml" unless="$(arg tower)">

<arg name="base" value="$(arg base)"/>
  </include>

  <!-- Velocity muxer only in groovy wait for upgrade
  <node pkg="nodelet" type="nodelet" name="mobile_base_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="cmd_vel_mux"
        args="load yocs_cmd_vel_mux/CmdVelMuxNodelet mobile_base_nodelet_manager">
    <param name="yaml_cfg_file" value="$(find elektron_bringup)/param/mux.yaml" />
    <remap from="cmd_vel_mux/output" to="elektron/commands/velocity"/>
  </node>
 -->
</launch>
